@using eBilet.Data.ViewModels; 
@model KayıtOlVM;

@{ 
    ViewData["Title"] = "Yeni bir hesap için kaydolun";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Yeni bir hesap için kaydolun</h4>
        </p>

        @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Üzgünüz!</b> - @TempData["Error"] </span>
                </div>
            }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="AdSoyad" class="control-label"></label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAdres" class="control-label"></label>
                        <input asp-for="EmailAdres" class="form-control" />
                        <span asp-validation-for="EmailAdres" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Şifre" class="control-label"></label>
                        <input asp-for="Şifre" class="form-control" />
                        <span asp-validation-for="Şifre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ŞifreOnayı" class="control-label"></label>
                        <input asp-for="ŞifreOnayı" class="form-control" />
                        <span asp-validation-for="ŞifreOnayı" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Sign up" />
                        <a class="btn btn-outline-secondary" asp-controller="Filmler" asp-action="Index">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>