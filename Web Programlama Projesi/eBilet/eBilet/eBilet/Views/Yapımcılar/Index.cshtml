@model IEnumerable<Yapımcı>

@{ ViewData["Title"] = "List of Producers"; }

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilResmiURL)</th>
                    <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td class="align-middle">
            <img class="rounded-circle" src="@item.ProfilResmiURL" alt="@item.AdSoyad" style="max-width: 150px" />
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
        <td class="align-middle">
            <a class="btn btn-outline-primary" asp-action="Düzenle" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Düzenle </a> |
            <a class="btn btn-outline-info" asp-action="Detaylar" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detaylar </a> |
            <a class="btn btn-danger text-white" asp-action="Sil" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Sil </a>
        </td>
}

    </tr>
}
            </tbody>

        </table>

    </div>
</div>